<% include ../partials/header %>
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Create a New Brewery</h1>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/breweries" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Brewery Name">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label> 
                    <input class="form-control" type="text" name="image" id="image"placeholder="image url"required>
                </div>
                
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Cleveland, OH">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" id="description" placeholder="description.....">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/breweries">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>